<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <RollingFile name="RollingFile"
                     fileName="./logs/commonService.log"
                     filePattern="./logs/commonService-%d{-dd-MMMM-yyyy}-%i.log">
            <PatternLayout>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</pattern>
            </PatternLayout>
            <Policies>
                <!-- rollover on startup, daily and when the file reaches
                    10 MegaBytes -->
                <OnStartupTriggeringPolicy />
                <SizeBasedTriggeringPolicy
                        size="10 MB" />
                <TimeBasedTriggeringPolicy />
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- LOG everything at INFO level -->
        <Root level="info">
            <AppenderRef ref="RollingFile" />
        </Root>
        <Logger name="org.apache" level="debug" additivity="false">
            <AppenderRef ref="RollingFile" />
        </Logger>
        <Logger name="org.springframework" level="trace" additivity="false">
            <AppenderRef ref="RollingFile" />
        </Logger>
        <Logger name="ru.kondrashov.commonservice.CommonServiceApplication" level="trace" additivity="false">
                <AppenderRef ref="RollingFile" />
        </Logger>
    </Loggers>
</Configuration>